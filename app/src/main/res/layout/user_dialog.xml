<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.ProgressBarAccent">

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/dialog_branch_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Branch goes here"
        android:textColor="@android:color/black"
        android:autoLink="phone"
        android:textSize="18sp" />

    <TextView
        android:layout_marginTop="7dp"
        android:id="@+id/dialog_email_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_branch_field"
        android:layout_marginStart="20dp"
        android:text="email goes here "
        android:textColor="@android:color/black"
        android:autoLink="email"
        android:textSize="17sp" />

    <TextView
        android:layout_marginTop="7dp"
        android:id="@+id/dialog_phone_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_email_field"
        android:layout_marginStart="20dp"
        android:text="phone goes here"
        android:textColor="@android:color/black"
        android:autoLink="phone"
        android:textSize="18sp" />

    <TextView
        android:layout_marginTop="7dp"
        android:id="@+id/dialog_status_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_phone_field"
        android:layout_marginStart="20dp"
        android:text="Status goes here"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:layout_marginTop="7dp"
        android:id="@+id/dialog_year_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_status_field"
        android:layout_marginStart="20dp"
        android:text="Year goes here"
        android:textColor="@android:color/black"
        android:textSize="18sp" />
</RelativeLayout>