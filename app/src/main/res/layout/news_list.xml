<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:padding="10dp">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/syllabus"
        android:id="@+id/news_image"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textStyle="bold"
        android:id="@+id/news_name"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignBaseline="@id/news_image"
        android:layout_marginLeft="70dp"
        android:textSize="50dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_image"
        android:text="Details"
        android:textColor="@color/colorcard"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:id="@+id/news_details"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_details"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        android:id="@+id/news_extraimage"/>


</RelativeLayout>